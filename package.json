{
  "name": "flashloan-aave",
  "version": "1.0.0",
  "private": false,
  "description": "a tool set for flash loaning on aave",
  "repository": {
    "type": "git",
    "url": "https://github.com/byhow/flashloan-aave.git"
  },
  "license": "MIT",
  "files": [
    "./dist/**/*",
    "./dist/*"
  ],
  "scripts": {
    "build": "forge b && yarn typechain",
    "clean": "forge clean && rm -rf ./dist",
    "test": "forge t",
    "typechain": "typechain --target=ethers-v5 'out/*/*.json' --out-dir dist/typechain",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js,css,md,sol}": "prettier --write",
    "*.sol": "solhint"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^11.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "typechain": "^8.0.0"
  },
  "peerDependencies": {
    "ethers": "^5.6.7",
    "typescript": "^4.6.4"
  }
}
